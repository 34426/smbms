<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igeek.mapper.RoleMapper">

    <select id="findById" resultType="com.igeek.pojo.Role">
        select * from smbms_role where id = #{id};
    </select>
    <select id="findAll" resultType="com.igeek.pojo.Role">
        select *
        from smbms_role;
    </select>
</mapper>